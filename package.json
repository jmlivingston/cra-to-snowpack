{
  "name": "react-snowpack4",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.2",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@snowpack/plugin-react-refresh": "^2.4.0",
    "cross-env": "^7.0.3",
    "snowpack": "^3.0.11"
  },
  "scripts": {
    "start": "cross-env REACT_APP_MODE=true react-scripts start",
    "build": "cross-env REACT_APP_MODE=true react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start-snowpack": "snowpack dev",
    "build-snowpack": "snowpack build",
    "postbuild-gh-pages": "node postbuild",
    "build-serve": "npx http-server build -o"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "snowpack": {
    "baseOptions": {
      "baseUrl": "./"
    },
    "exclude": [
      "**/setupTests.js"
    ],
    "mount": {
      "public": {
        "url": "/",
        "static": true
      },
      "src": {
        "url": "/dist"
      }
    },
    "plugins": [
      "@snowpack/plugin-react-refresh"
    ]
  }
}
